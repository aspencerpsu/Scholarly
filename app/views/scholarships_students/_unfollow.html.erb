<h2><b> Scholarship <%= ind %>: </b></h2>

<p>Name: <div style="text-indent: 30px;"><%= val.name %></div></p>
<p>Deadline: <div style="text-indent: 30px;"><%= val.deadline.to_date %></div></p>
<p>Value:  <div style="text-indent: 30px;"><%= val.value %></div></p>
<p>GPA worth: <div style="text-indent: 30px;"><%= val.gpa %></div></p>


<%= form_for(ScholarshipsStudent.find_by(scholarship_id: val.id, student_id: @student.id), html:{remote: true, method: :delete}) do |f| %>

	<%= hidden_field_tag(:scholarship_id, val.id) %>
	<%= f.submit('unfollow?') %>
<% end %>
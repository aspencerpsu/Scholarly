
<div class="row">
<%= link_to "Go Back?", root_path, :class => "fl" %>
	<div class="col-md-8 login" style="margin: 0 auto; width:100%;">
		<h1>Login To ScholarAPPtitude</h1>
		<p>For all students proceeding to go to college</p>
		<p>Or if you're a returning loan granter</p>
		<p>Please enter your email and password underneath to proceed</p>
			<%= form_tag(login_path, {:class => "form-controller"}) do %>
			  <div class="form-group spacing">
			  	<%= label_tag(:email) %>
			 	 <%= text_field_tag(:email, "", :class => "form-control") %>
			  </div>
			  <div class="form-group spacing">
				 <%= label_tag(:password) %>
			 	 <%= password_field_tag(:password,"", :class => "form-control") %>
			  </div>
			  <%= submit_tag(:submit, :class => "btn btn-default") %>
			<% end %>
	</div>
</div>